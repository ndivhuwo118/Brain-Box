<h1 class="text-center title">Round <%= @round.round_number %> for Game <%= @game.id %></h1>

<div class="form-container question-card">
  <% if @question %>
    <p class="question-content">Question: <%= @question.content %></p>

    <%= form_with url: submit_answer_question_path(@question, game_id: @game.id, round_id: @round.id), method: :post do %>
      <ul class="answer-list">
        <% @question.answers.each do |answer| %>
          <li class="answer-item">
            <%= radio_button_tag 'answer_id', answer.id, false, class: 'answer-radio' %>
            <%= label_tag "answer_id_#{answer.id}", answer.content, class: 'answer-label' %>
          </li>
        <% end %>
      </ul>
      <%= submit_tag "Submit", class: 'btn submit-btn w-100' %>
    <% end %>

  <% else %>
    <p class="no-question">No questions available for this round yet.</p>
  <% end %>
</div>

<%= link_to 'Back to games', games_path, class: 'btn back-btn' %>

